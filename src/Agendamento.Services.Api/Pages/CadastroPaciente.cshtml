@page
@model Agendamento.Services.Api.Pages.CadastroPacienteModel
@{
    ViewData["Title"] = "Cadastro de Paciente";
}

<partial name="_ValidationSummary" />
<h2>Cadastro de Paciente</h2>

<form method="post">
    <div>
        <label asp-for="Input.Nome">Nome</label>
        <input asp-for="Input.Nome" />
        <span asp-validation-for="Input.Nome"></span>
    </div>

    <div>
        <label asp-for="Input.CPF">CPF</label>
        <input asp-for="Input.CPF" />
        <span asp-validation-for="Input.CPF"></span>
    </div>

    <div>
        <label asp-for="Input.DataNascimento">Data de Nascimento</label>
        <input asp-for="Input.DataNascimento" type="date" />
        <span asp-validation-for="Input.DataNascimento"></span>
    </div>

    <button type="submit">Cadastrar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Mensagem))
{
    <p style="color:green;">@Model.Mensagem</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
